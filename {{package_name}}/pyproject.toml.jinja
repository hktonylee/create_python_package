
# -----------------------------------------------------------------------------------------------
[project]
name = "{{package_name}}"
dynamic = ["version"]
description = "{{package_description}}"

readme = "README.md"
requires-python = ">={{python_min_version}}"
license = {text = "{{package_license}}"}
authors = [
    { name = "{{author_name}}", email = "{{author_email}}" },
]

# Check https://pypi.python.org/pypi?%3Aaction=list_classifiers
classifiers = [
    "Programming Language :: Python :: 3",
    "Development Status :: 3 - Alpha",
]

dependencies = [
]


# -----------------------------------------------------------------------------------------------
[project.optional-dependencies]
dev = [
    "pytest",
]


# -----------------------------------------------------------------------------------------------
[project.urls]
Homepage = "https://github.com/{{github_username}}/{{package_name}}"
Repository = "https://github.com/{{github_username}}/{{package_name}}"


# -----------------------------------------------------------------------------------------------
[project.scripts]
{{package_name}} = "{{package_name}}.cli:main"


# -----------------------------------------------------------------------------------------------
[build-system]
requires = ["setuptools >= 64", "setuptools_scm >= 8"]
build-backend = "setuptools.build_meta"


# -----------------------------------------------------------------------------------------------
[tool.setuptools.packages.find]
where = ["./src/"]
include = ["{{package_name}}"]


# -----------------------------------------------------------------------------------------------
[tool.setuptools.package-data]
{{package_name}} = ["py.typed"]


# -----------------------------------------------------------------------------------------------
[tool.setuptools_scm]


# -----------------------------------------------------------------------------------------------
[tool.pytest.ini_options]
testpaths = ["tests"]
python_files = ["test_*.py"]


# -----------------------------------------------------------------------------------------------
[tool.isort]
profile = "black"


